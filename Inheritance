package Cdac.Oops.inheritance;


class Vehicle{
	String brand;
	int fuel;
	
	Vehicle(String brand,int fuel){
		this.brand=brand;
		this.fuel=fuel;
	}
	
	void refuel(int liters) {
		fuel=fuel+liters;
		
		System.out.println("total Fuel is : " + fuel);
	}
	
}

class Car extends Vehicle{
	int mileage;
	
	Car(String brand,int fuel,int mileage){
		super(brand,fuel);
		this.mileage=mileage;
	}
	
	void calculateTravelDistance() {
		double TotalDistance=fuel* mileage;
		System.out.println("total Distance is : " + TotalDistance);
	}
}





public class VehicleSystem {
	
	public static void main(String[] arsg) {
    Car c1=new Car("Toyota", 10, 15);
    c1.refuel(20);
    c1.calculateTravelDistance();
}
}


